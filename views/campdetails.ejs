

<% include partials/header %>

<div class="container">
    <div class="row">
        
        <div class="col-md-3">
            <p class="lead">YELPcamp</p>
            <div class="list-group">
                <li class="list-group-item active" >Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            
            <div class="thumbnail">
                <img src="<%= campground.image %>" class="img-responsive">
                <div class="caption">
                    <div class="pull-right"><strong>$9.00/night</strong></div>
                    <h2><%= campground.name %></h2>
                    <p><%= campground.description %></p>
                </div>
            </div>
            
            <div class="well">
                <span id="commenttitle">Comments:</span>
                <div class="text-right">
                    <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">LEAVE REVIEW</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12" id="eachcomment">
                            <strong><%= comment.author.username %> -</strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
            
        </div>
        
    </div>
</div>

<% include partials/footer %>




